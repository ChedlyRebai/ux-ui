{
  "scripts": {
    "compile-scss": "sass src/styles/main.scss src/style-compiled.css",
    "dev": "npm run compile-scss && tailwindcss -i ./src/style-compiled.css -o ./public/style.css --watch",
    "build": "npm run compile-scss && tailwindcss -i ./src/style-compiled.css -o ./public/style.css --minify"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "http-server": "^14.1.1",
    "postcss": "^8.5.6",
    "sass": "^1.97.0",
    "tailwindcss": "^3.4.19"
  }
}
